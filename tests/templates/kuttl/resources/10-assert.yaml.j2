---
apiVersion: kuttl.dev/v1beta1
kind: TestAssert
timeout: 600
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: trino-coordinator-resources-default
spec:
  template:
    spec:
      containers:
        - name: trino
          resources:
            requests:
              cpu: 500m
              memory: 4Gi
            limits:
              cpu: "2"
              memory: 4Gi
{% if lookup('env', 'VECTOR_AGGREGATOR') %}
        - name: vector
{% endif %}
status:
  readyReplicas: 1
  replicas: 1
---
