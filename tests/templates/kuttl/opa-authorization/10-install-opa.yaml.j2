---
apiVersion: kuttl.dev/v1beta1
kind: TestStep
commands:
  - script: |
      kubectl apply -n $NAMESPACE -f - <<EOF
      ---
      apiVersion: opa.stackable.tech/v1alpha1
      kind: OpaCluster
      metadata:
        name: opa
      spec:
        image:
          productVersion: "{{ test_scenario['values']['opa'] }}"
          pullPolicy: IfNotPresent
        clusterConfig:
          userInfo:
            backend:
              keycloak:
                hostname: keycloak.$NAMESPACE.svc.cluster.local
                port: 8443
                tls:
                  verification:
                    server:
                      caCert:
                        secretClass: keycloak-tls-$NAMESPACE
                clientCredentialsSecret: user-info-fetcher-client-credentials
                adminRealm: my-dataspace
                userRealm: my-dataspace
{% if lookup('env', 'VECTOR_AGGREGATOR') %}
          vectorAggregatorConfigMapName: vector-aggregator-discovery
{% endif %}
        servers:
          config:
            logging:
              enableVectorAgent: {{ lookup('env', 'VECTOR_AGGREGATOR') | length > 0 }}
              containers:
                opa:
                  loggers:
                    decision:
                      level: INFO
          roleGroups:
            default: {}
