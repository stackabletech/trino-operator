---
apiVersion: v1
kind: Secret
metadata:
  name: trino-with-ldap-bind-secret
  labels:
    secrets.stackable.tech/class: trino-with-ldap-bind
stringData:
  user: cn=admin,dc=example,dc=org
  password: admin
---
apiVersion: trino.stackable.tech/v1alpha1
kind: TrinoCluster
metadata:
  name: trino
spec:
  image:
    productVersion: "{{ test_scenario['values']['trino-latest'].split('-stackable')[0] }}"
    stackableVersion: "{{ test_scenario['values']['trino-latest'].split('-stackable')[1] }}"
  clusterConfig:
    catalogLabelSelector: {}
{% if lookup('env', 'VECTOR_AGGREGATOR') %}
    vectorAggregatorConfigMapName: vector-aggregator-discovery
{% endif %}
    authentication:
      - authenticationClass: password-file-auth
      - authenticationClass: password-file-auth-other
{% if test_scenario['values']['ldap-use-tls'] == 'false' %}
      - authenticationClass: ldap-without-tls
      - authenticationClass: ldap-without-tls-other
{% else  %}
      - authenticationClass: ldap-with-tls
      - authenticationClass: ldap-with-tls-other
{% endif %}
  coordinators:
    config:
      logging:
        enableVectorAgent: {{ lookup('env', 'VECTOR_AGGREGATOR') | length > 0 }}
    roleGroups:
      default:
        replicas: 1
  workers:
    config:
      logging:
        enableVectorAgent: {{ lookup('env', 'VECTOR_AGGREGATOR') | length > 0 }}
    roleGroups:
      default:
        replicas: 1
